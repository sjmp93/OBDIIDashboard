<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MaterialComponents" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryActionBar</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryActionBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/primaryActionBar</item>
        <item name="android:colorBackground">@color/activityBackground</item>
        <item name="android:text">@color/actionBarTitle</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">?attr/isLightTheme</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButton</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:tint">@color/activityBackground</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="android:style/TextAppearance">
        <item name="android:textColor">@color/actionBarTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">35dp</item>
        <item name="android:fontFamily">google-sans</item>
    </style>



    <style name="ExpandedActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:title">@color/activityBackground</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">40dp</item>

    </style>

    <style name="CollapsedActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:title">@color/activityBackground</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


    <style name="StartTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSecundary</item>
        <item name="colorPrimaryDark">@color/colorSecundaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:title">@color/activityBackground</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
