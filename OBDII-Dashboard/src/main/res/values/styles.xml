<resources>
    <!-- Base application theme. -->
    <style name="MaterialComponents" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryActionBar</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryActionBar</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/activityBackground</item>
        <item name="android:text">@color/actionBarTitle</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButton</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:tint">@color/activityBackground</item>
    </style>


    <!-- Base application theme.
    <style name="NightMode" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/engine_oil_iconbg</item>
        <item name="colorSecondary">@color/progress_background</item>
        <item name="colorPrimaryDark">@color/colorSecundary</item>
        <item name="android:colorBackground">@color/primary_dark</item>
        <item name="colorAccent">@color/colorSecundaryDark</item>
    </style>
    -->
    <!-- Action bar colors (the title bar wich is on top) -->
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="android:style/TextAppearance">
        <item name="android:textColor">@color/actionBarTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">35dp</item>
        <item name="android:fontFamily">google-sans</item>
    </style>

    <style name="ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/colorSecundary</item>
        <item name="colorPrimary">@color/colorSecundary</item>
        <item name="colorPrimaryDark">@color/colorSecundaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:title">@color/activityBackground</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="StartTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSecundary</item>
        <item name="colorPrimaryDark">@color/colorSecundaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:title">@color/activityBackground</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


    <style name="MyButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
    </style>
    <style name="MyShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>

    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
